<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="174dp"
    android:layout_marginHorizontal="4dp"
    android:layout_height="221dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFlashSaleIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="7dp"
        android:src="@mipmap/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/tvFlashSaleCategory"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleIcon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleIcon"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/text_view_background_f93a3a_100_9dp_shape"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleIcon"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleIcon"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFlashSaleEllipsePlus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ellipse"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleIcon"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleIcon"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleIcon"
        app:layout_constraintVertical_bias="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_14"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleEllipsePlus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFlashSaleEllipseHeart"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginHorizontal="5dp"
        android:src="@drawable/ellipse"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintEnd_toStartOf="@id/ivFlashSaleEllipsePlus"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleEllipsePlus" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleEllipseHeart" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFlashSalePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/product_text"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintEnd_toStartOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleEllipseHeart" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFlashSaleProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:lines="2"
        android:textColor="@color/product_text"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintEnd_toStartOf="@id/ivFlashSaleEllipseHeart"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleIcon"
        app:layout_constraintVertical_bias="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFlashSaleCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/text_view_background_c4c4c4_85_8dp_shape"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textColor="@color/product_category_text"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvFlashSaleProductName"
        app:layout_constraintEnd_toEndOf="@id/ivFlashSaleIcon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/ivFlashSaleIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlashSaleIcon"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>